pipeline {
  agent any

  stages {
    stage('Clone') {
      steps {
        git 'https://github.com/Pramod581/Jarvis-Desktop-Voice-Assistant.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'pip3 install -r requirements.txt'
      }
    }

    stage('Restart Service') {
      steps {
        sh 'sudo systemctl restart jarvis'
      }
    }
  }
}
